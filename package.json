{
  "name": "simple-shop",
  "version": "1.0.0",
  "description": "A comprehensive e-commerce and content platform with authentication, chat, courses, and video features",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server.js",
    "client": "cd my-app && npm start",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run test",
    "deploy:dev": "npm run check && npm run build",
    "deploy:prod": "npm run check && npm run build && npm start",
    "heroku-postbuild": "echo 'Heroku postbuild completed'",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "logs": "tail -f logs/app.log",
    "monitor": "node scripts/monitor.js",
    "client:build": "cd client && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\""
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "i18next": "^23.7.11",
    "i18next-browser-languagedetector": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "path": "^0.12.7",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "stripe": "^13.5.0",
    "winston": "^3.10.0",
    "xss": "^1.0.14",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "e-commerce",
    "shop",
    "database",
    "express",
    "auth",
    "chat",
    "socket.io",
    "mongodb",
    "mongoose",
    "jwt",
    "file-upload",
    "xss",
    "csrf",
    "responsive",
    "bootstrap",
    "react",
    "spa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/simple-shop.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/simple-shop/issues"
  },
  "homepage": "https://your-app-name.herokuapp.com",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
